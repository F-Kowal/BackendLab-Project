@model IEnumerable<Game>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-secondary">Nasze gry</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Game" asp-action="Create" class="btn btn-secondary">
               <i class="bi bi-plus-lg"></i> &nbsp; Dodaj Nową Grę
            </a>
        </div>
    </div>
    <br />
    <br />

<table class="table table-bordered table-striped" style="width:100%">
    <thead>  
        <tr>
            <th>
                Nazwa
            </th>
            <th>
                Opis
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr class="table-light">
                <td width="30%">
                    @obj.Name
                </td>
                <td width="50%">
                    @obj.Description
                </td>
            </tr>
        }
    </tbody>
</table>
</div>